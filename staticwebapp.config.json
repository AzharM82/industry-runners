{
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type",
    "Cache-Control": "no-cache"
  },
  "auth": {
    "identityProviders": {
      "google": {
        "registration": {
          "clientIdSettingName": "GOOGLE_CLIENT_ID",
          "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
        }
      },
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/common/v2.0",
          "clientIdSettingName": "MICROSOFT_CLIENT_ID",
          "clientSecretSettingName": "MICROSOFT_CLIENT_SECRET"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/pricing",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/login",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/login/google",
      "rewrite": "/.auth/login/google?post_login_redirect_uri=/dashboard"
    },
    {
      "route": "/login/microsoft",
      "rewrite": "/.auth/login/aad?post_login_redirect_uri=/dashboard"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=/"
    },
    {
      "route": "/dashboard",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/dashboard/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/account",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin/health",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/health-check",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/create-checkout-session",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/subscription-status",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/run-prompt",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin-user",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/track-login",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin-report",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/investments",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/update-profile",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin-sync-subscription",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin-user-status",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/stripe-webhook",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "*.{css,js,svg,png,jpg,ico,json}"]
  }
}
